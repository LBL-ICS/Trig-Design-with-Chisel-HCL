#!/bin/csh -f
################################################################################
# simulation top script
# change modelsim in this file dir and run "do this_file.do"
# project dir ---+---> hdl source dir
#                +---> sim script dir
#
################################################################################

# check if current dir has modelsim config file
set has_config  [file exists modelsim.do]
# config modelsim 
if {$has_config==1} { do modelsim.do  ; }

echo "+====================================="
echo "| Creat Lib Work soc                  "
echo "+====================================="
vlib work
vmap work work 

echo "+====================================="
echo "| Complile RTL Code of soc            "
echo "+====================================="
vlog +define+SIN_N32_PD32_BW32\
     -f ../filelist/filelist_sin_n32_pd32_bw32.f  
#vlog -f ../filelist/filelist_13cc.f  

echo "+====================================="
echo "| Compiler Pass                       "
echo "| Being to Run Simulation             "
echo "+====================================="
vsim work.tb_sin -t 1ns

################## #################### mus  ####################################
add wave -noupdate -format logic -radix hexadecimal tb_sin/u_Sin_n32_pd32_bw32/clock
add wave -noupdate -format logic -radix hexadecimal tb_sin/u_Sin_n32_pd32_bw32/reset
add wave -noupdate -format logic -radix hexadecimal tb_sin/u_Sin_n32_pd32_bw32/io_ready
add wave -noupdate -format logic -radix hexadecimal tb_sin/u_Sin_n32_pd32_bw32/io_in
add wave -noupdate -format logic -radix hexadecimal tb_sin/u_Sin_n32_pd32_bw32/io_valid
add wave -noupdate -format logic -radix hexadecimal tb_sin/u_Sin_n32_pd32_bw32/io_out

add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/reducer/clock
add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/reducer/reset
add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/reducer/io_in
add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/reducer/io_out
add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/tofixedz0/io_in
add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/tofixedz0/io_out

add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/cordic/tofixedx0/io_in
add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/cordic/tofixedx0/io_out
add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/cordic/tofixedy0/io_in
add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/cordic/tofixedy0/io_out
add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/cordic/tofloatxout/io_in
add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/cordic/tofloatxout/io_out
add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/cordic/tofloatyout/io_in
add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/cordic/tofloatyout/io_out
add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/cordic/tofloatzout/io_in
add wave -position insertpoint /tb_sin/u_Sin_n32_pd32_bw32/cordic/tofloatzout/io_out

run 1us                                                                            
